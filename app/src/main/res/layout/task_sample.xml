<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardUseCompatPadding="true"
    card_view:cardBackgroundColor="#42007a"
    card_view:cardElevation="4dp"
    card_view:cardCornerRadius="8dp"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <LinearLayout
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:gravity="center|left"
            android:layout_margin="8dp"
            android:layout_weight="1.1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/circle_layout_id"
                android:background="@drawable/circle_shape_2"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="80dp"
                android:layout_height="80dp">
                <TextView
                    android:id="@+id/task_day_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/task_month_id"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:textColor="#FFFFFF"
                    android:text="May"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="0.7"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/task_name_id"
                android:gravity="center|left"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:text="Go to market"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:weightSum="2"
            android:orientation="vertical"
            android:layout_weight="1.2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_gravity="center"
                android:id="@+id/delete_btn_id"
                android:background="#42007a"
                android:layout_weight="0.5"
                android:src="@drawable/icon_delete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:gravity="center"
                android:id="@+id/task_time_id"
                android:layout_weight="1.5"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:text="12:55 pm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>