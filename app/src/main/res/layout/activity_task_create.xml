<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/task_crt_bg"
    android:orientation="vertical"
    tools:context=".TaskCreateActivity">

    <LinearLayout
        android:gravity="center"
        android:padding="5dp"
        android:orientation="vertical"
        android:background="@drawable/task_crt_bg_1"
        android:layout_width="350dp"
        android:layout_height="550dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/task_text_id"
            app:counterEnabled="true"
            app:counterMaxLength="25"
            app:errorEnabled="true"
            app:boxStrokeColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:hint="What is your planning?"
                android:inputType="text"
                android:gravity="center"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textColorHint="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold"
                android:backgroundTint="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="130dp">

            </android.support.design.widget.TextInputEditText>
        </android.support.design.widget.TextInputLayout>

        <ImageButton
            android:id="@+id/picker_button_id"
            android:layout_gravity="center"
            android:src="@drawable/alarm_clock"
            android:layout_marginBottom="10dp"
            android:background="@drawable/circle_shape_1"
            android:layout_marginTop="10dp"
            android:layout_width="95dp"
            android:layout_height="95dp"/>

        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:padding="2dp"
                android:src="@drawable/icon_cal"
                android:layout_weight="1.6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:id="@+id/datetext_id"
                android:background="@drawable/date_time_shape"
                android:layout_weight="0.4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:padding="2dp"
                android:src="@drawable/icon_clock"
                android:layout_weight="1.6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:id="@+id/timetext_id"
                android:background="@drawable/date_time_shape"
                android:layout_weight="0.4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:padding="2dp"
            android:background="#880e4f"
            android:weightSum="2"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="90dp">

            <LinearLayout
                android:background="#880e4f"
                android:layout_weight="1.3"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textStyle="bold|normal"
                    android:textColor="#ffffff"
                    android:textSize="17sp"
                    android:textAllCaps="false"
                    android:gravity="center"
                    android:text="PRIORITY LEVEL"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:background="#FFFFFF"
                android:layout_weight="0.7"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioGroup
                    android:gravity="center"
                    android:weightSum="3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RadioButton
                        android:layout_margin="7dp"
                        android:id="@+id/rb_high_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HIGH"
                        android:textColor="#FC473B"
                        android:textSize="16sp"
                        android:textStyle="bold|normal"
                        android:textAllCaps="false"
                        android:buttonTint="#FC473B"
                        />
                    <RadioButton
                        android:layout_margin="7dp"
                        android:id="@+id/rb_medium_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MEDIUM"
                        android:textColor="#5AC515"
                        android:textSize="16sp"
                        android:textStyle="bold|normal"
                        android:textAllCaps="false"
                        android:buttonTint="#5AC515"
                        />
                    <RadioButton
                        android:layout_margin="7dp"
                        android:id="@+id/rb_low_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LOW"
                        android:textColor="#ff8f00"
                        android:textSize="16sp"
                        android:textStyle="bold|normal"
                        android:textAllCaps="false"
                        android:buttonTint="#ff8f00"
                        />

                </RadioGroup>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/letsgo_button_id"
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:textStyle="normal|bold"
        android:text="LET'S GO"
        android:textAllCaps="false"
        android:background="@drawable/letsgo_btn_shape"
        android:layout_marginTop="10dp"
        android:layout_width="350dp"
        android:layout_height="60dp"/>

</LinearLayout>